#!/usr/bin/env bash

# Branch to build (develop by default)
#
# If there is no given branch in the repository,
# then the build scripts will use 'develop' branch
GIT_BRANCH=develop

# if $GIT_BRANCH is not present in a repository, then
# branch will be switched to the $GIT_BRANCH_DEFAULT
GIT_BRANCH_DEFAULT=develop

# Specifies version of the final assembly (mac.sh only)
VERSION_TO_SET_IN_BUILDER=0.0.0


# Specifies the config that will be used for dappctrl execution
DAPPCTRL_CONFIG=dappctrl-dev.config.json

# Log level:
# ["debug", "info", "warning", "error", "fatal"]
DAPPCTRL_LOG_LEVEL=info


# Dapp GUI repository path (feel free to change)
DAPP_GUI_DIR=~/privatix/dapp-gui

# Pay your attention!
# The go projects should be located OUTSIDE `${GOPATH}`
# because of using go modules.
#
# more information: https://github.com/golang/go/wiki/Modules

# Dapp controller repository path
DAPPCTRL_DIR=~/privatix/dappctrl

# Dapp openvpn repository path
DAPP_OPENVPN_DIR=~/privatix/dapp-openvpn

# Dapp proxy repository path
DAPP_PROXY_DIR=~/privatix/dapp-proxy

# Dapp installer repository path
DAPP_INSTALLER_DIR=~/privatix/dapp-installer

# Bitrock Installer bin path
BITROCK_INSTALLER_BIN_MAC="/Applications/BitRock InstallBuilder Enterprise 18.10.0/bin"
BITROCK_INSTALLER_BIN_LINUX="/opt/installbuilder-19.2.0/bin"

# ARTEFACTS
ARTEFACTS_ZIP_URL=http://artdev.privatix.net/artefacts_mac.zip
ARTEFACTS_LOCATION=~/artefacts_mac.zip
